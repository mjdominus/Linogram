

require "box";
require "label";

define labelbox extends box {
        param string text = "";
        label the_label(text=text);
        draw { top; left; bottom; right; the_label; }
        constraints { the_label = c; }
}




labelbox L(text="fooey");

constraints {
        L.sw = (2,3);
        L.wd = 4;
        L.ht = 5;
}

__END__

require "draw/dummy.pl";
