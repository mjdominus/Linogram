

require "point";
require "line";

define polygon[N] closed {
  point v[N];
  line  e[N];
  constraints {
    e[i].start = v[i];
    e[i].end = v[i+1];
  }
}

define quadrilateral {
  polygon[4] P;
  point v[4];
  line e[4];
  constraints {
    e[i] = P.e[i];
    v[i] = P.v[i];
  }
}

quadrilateral myquad;

constraints {
  myquad.v[0] = (2,1);
  myquad.v[1] = (1,-2);
  myquad.v[2] = (-2,-1);
  myquad.v[3] = (-1,2);
}


