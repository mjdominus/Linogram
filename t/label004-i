

require "point";

define label extends point {
        param string label;
}

require "line";

define label_line extends line {
        label text(label="") = center;
        draw { text; &draw_line; }
}

label_line ln(text="foo");

constraints { ln.start = (0,1); ln.end = (2,3); }

draw { &dump_hash; }

__END__

require 'testutils.pl';
